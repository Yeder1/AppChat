{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@*": ["./*"],
      "@types/*": ["../@types/*"]
    }
  }
}
